<?xml version="1.0" encoding="utf-8"?>
<!--dp= px * 3-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/top"
        style="@style/bar"
        app:layout_constraintBottom_toTopOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </View>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top"
        tools:text="아이스브레이커스"
        style="@style/textView_style"/>


    <TextView
        android:id="@+id/key"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:text="키워드"
        style="@style/textView_style"/>

    <View
        android:id="@+id/keywordbox"
        android:layout_width="360dp"
        android:layout_height="384dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/key">

    </View>

    <TextView
        android:id="@+id/shop_R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/keywordbox"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="쇼핑몰 리뷰"
        style="@style/textView_style"/>

    <!--평균 별점+ 별 모양-->
    <LinearLayout
        android:id="@+id/grade_line"
        android:layout_height="36dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/shop_R"
        app:layout_constraintStart_toStartOf="parent">
        <include layout="@layout/grade_star"
            android:id="@+id/grade" />

    </LinearLayout>

    <TextView
        android:id="@+id/all_review"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:layout_marginEnd="34dp"
        app:layout_constraintTop_toBottomOf="@id/grade_line"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="모두보기"
        style="@style/textView_style"/>

    <!--스크롤 화면-->
    <HorizontalScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/all_review"
        android:layout_marginTop="4dp"
        >
        <include layout="@layout/scroll"/>
    </HorizontalScrollView>
    <View
        android:id="@+id/bottom"
        style="@style/bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </View>

</androidx.constraintlayout.widget.ConstraintLayout>

