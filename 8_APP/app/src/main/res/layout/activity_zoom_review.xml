<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Zoom_Review">

    <include layout="@layout/topbar_back"
        android:id="@+id/top3"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top3"
        tools:text="아이스브레이커스"
        style="@style/textView_style"/>

    <include layout="@layout/review_text_l"
        android:id="@+id/zoom_review"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_height="186dp"
        android:layout_width="312dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/bottom3"
        style="@style/bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <include layout="@layout/ho_scroll"/>
    </View>



</androidx.constraintlayout.widget.ConstraintLayout>